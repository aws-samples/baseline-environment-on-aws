{
  "private": true,
  "name": "baseline-environment-on-aws",
  "version": "3.1.0",
  "description": "Baseline Environment on AWS",
  "repository": {
    "type": "git",
    "url": "https://github.com/aws-samples/baseline-environment-on-aws.git"
  },
  "license": "MIT-0",
  "engines": {
    "node": ">=22",
    "npm": ">=8.1.0"
  },
  "workspaces": [
    "usecases/*"
  ],
  "scripts": {
    "unused": "knip",
    "lint": "eslint --fix .",
    "lint:ci": "eslint .",
    "format": "prettier --write .",
    "format:ci": "prettier --check .",
    "release": "echo 'Releases are now automated via release-please GitHub Action'"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.18.8",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "knip": "^5.64.2",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": [
      "git-secrets --scan"
    ],
    "*.(ts|tsx|js|jsx)": [
      "npx eslint --fix"
    ],
    "*.(ts|tsx|js|jsx|json|html|yml|yaml|md|graphql|css|scss|less|vue|flow)": [
      "npx prettier --write"
    ]
  }
}
